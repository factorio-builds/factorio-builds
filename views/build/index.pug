extends ../layout

block content
  .page-header
    h3 Builds

  p The list of builds

  each build, index in builds
    h4
      div
        a(href='/builds/' + build._id)= build.name
      if build.draft
        small
          i.fa.fa-newspaper-o
          | Draft
    div(class='badge')= build.category
    p= build.desc
