extends ../layout

block content
  .page-header
    a(href='/builds') &#8592; Back to builds

    if build.draft

      a.pull-right(href='/builds/' + build._id + '/publish', class='btn btn-success') Publish build

    else

      a.pull-right(href='/builds/' + build._id + '/unpublish', class='btn btn-danger') Revert to draft

    a.pull-right(href='/builds/' + build._id + '/edit', class='btn btn-info') Edit build

    h3
      div= build.name
    if build.draft
      small
        i.fa.fa-newspaper-o
        | Draft

  div(class='badge')= build.category

  p= build.desc
