mixin build-list
  .row
    each chunk, index in builds
      .col-md-4.col-sm-12
        each build, index in chunk
          a(class='build-item', href='/builds/' + build._id)
            h4(class='build-item__title')
              div= build.name
              if build.draft
                small
                  i.fa.fa-newspaper-o
                  | Draft
            if build.image
              div(class='build-item__image')
                img(src='/images/' + build.image, class='img-responsive')
            div(class='build-item__categories')
              div(class='badge')= build.category
