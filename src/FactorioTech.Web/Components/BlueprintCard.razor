@using Humanizer;
@using System.Text;

@inject IUrlHelper Url

<div class="card mb-1">
    <div class="card-header">
        <div class="row">
            <div class="col-md-8">
                <div class="media">
                    <BlueprintIcons Icons="Blueprint.Icons" Type="blueprint" />
                    <div class="media-body">
                        <h5 class="card-title mt-2 mb-0">@(Blueprint.Label ?? "(no title)")</h5>
                        <small class="text-muted">Contains @entitiesCount entities</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="btn-toolbar float-right" role="toolbar">
                    <div class="btn-group mr-2" role="group">
                        <button type="button" class="btn btn-sm btn-default"
                                data-toggle="copy-blueprint" data-payload="@payload.Encoded">
                            <i class="fas fa-copy"></i>
                            Copy to clipboard
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row align-items-end">
            <div class="col">
                <ul class="nav nav-tabs card-header-tabs justify-content-end" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" id="overview-tab-@payload.Hash" data-toggle="tab" href="#overview-@payload.Hash" role="tab"
                           aria-controls="overview" aria-selected="true">
                            Overview
                        </a>
                    </li>
                    @if (entitiesCount > 0)
                    {
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="entities-tab-@payload.Hash" data-toggle="tab" href="#entities-@payload.Hash" role="tab"
                               aria-controls="entities" aria-selected="false">
                                Entities <span class="badge badge-info">@entitiesCount</span>
                            </a>
                        </li>
                    }
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" id="blueprint-tab-@payload.Hash" data-toggle="tab" href="#blueprint-@payload.Hash" role="tab"
                           aria-controls="blueprint" aria-selected="false">
                            Blueprint String <span class="badge badge-info">@Encoding.UTF8.GetByteCount(payload.Encoded).Bytes().Humanize("#.##")</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 blueprint-rendering">
                <a href="@Url.BlueprintRendering(payload.Hash, ImageService.RenderingType.Full)" data-lightbox="@(BookHash ?? payload.Hash)" data-title="@(Blueprint.Label ?? "(no title)")">
                    <img src="@Url.BlueprintRendering(payload.Hash, ImageService.RenderingType.Thumb)" class="img-thumbnail" loading="lazy" />
                </a>
                @if (ShowSelectCoverButton)
                {
                    <button type="button" class="btn btn-sm btn-warning btn-block mt-2"
                            data-hash="@payload.Hash" data-rendering-url="@Url.BlueprintRendering(payload.Hash, ImageService.RenderingType.Full)"
                            data-toggle="tooltip" data-placement="top" title="Use this rendering as blueprint imageâ€¦">
                        <i class="fas fa-copy"></i>
                        Use as cover
                    </button>
                }
            </div>
            <div class="col-md-8">
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="overview-@payload.Hash" role="tabpanel" aria-labelledby="overview-tab-@payload.Hash">
                        <p class="card-text">@(Blueprint.Description ?? "(no description)")</p>
                    </div>
                    @if (entitiesCount > 0)
                    {
                        <div class="tab-pane fade" id="entities-@payload.Hash" role="tabpanel" aria-labelledby="entities-tab-@payload.Hash">
                            <table class="table table-striped table-sm">
                                <tbody>
                                    @foreach (var (key, count) in GetEntityStats(Blueprint))
                                    {
                                        <tr>
                                            <td><img src="@Url.Icon(32, key)" width="32" height="32" loading="lazy" /></td>
                                            <td>@count</td>
                                            <td><a href="@Utils.GetWikiUrlForEntity(key)">@key</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    <div class="tab-pane fade" id="blueprint-@payload.Hash" role="tabpanel" aria-labelledby="blueprint-tab-@payload.Hash">
                        <code>@payload.Encoded</code>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Hash? BookHash { get; set; }

    [Parameter]
    public bool ShowSelectCoverButton { get; set; }

    [Parameter]
    public FactorioApi.Blueprint Blueprint { get; set; } = null!;

    [Parameter]
    public PayloadCache PayloadCache { get; set; } = new();

    private BlueprintPayload payload = new(Hash.Empty, string.Empty, new Version());
    private int entitiesCount;

    protected override async Task OnInitializedAsync()
    {
        entitiesCount = Blueprint.Entities.Count();
        payload = await PayloadCache.EnsureInitialized(Blueprint);
    }

    public IDictionary<string, int> GetEntityStats(FactorioApi.Blueprint blueprint) =>
        blueprint.Entities
            .GroupBy(e => e.Name)
            .OrderByDescending(g => g.Count())
            .ToDictionary(g => g.Key.ToLowerInvariant(), g => g.Count());
}
