@page "/{user}/{slug}/{hash?}"
@model ViewModel
@using Humanizer

@{ var blueprint = Model.Blueprint!; }

<div class="container blueprint">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-page="User" asp-route-user="@blueprint.Owner!.UserName">@blueprint.Owner!.UserName</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <a asp-page="View" asp-route-user="@blueprint.Owner!.UserName" asp-route-slug="@blueprint.Slug" asp-route-hash="@null">@blueprint.Slug</a>
            </li>
            <li class="ml-auto">
                <div class="btn-group ml-2" role="group">
                    <button type="button" class="btn btn-sm btn-default">Star</button>
                    <button type="button" class="btn btn-sm btn-default" disabled>42</button>
                </div>
            </li>
            @if (User.GetUserId() == blueprint.OwnerId)
            {
                <li>
                    <div class="btn-group ml-2" role="group">
                        <button type="button" class="btn btn-sm btn-default">Edit</button>
                    </div>
                </li>
            }
            <li>
                <div class="btn-group ml-2" role="group">
                    <button type="button" class="btn btn-sm btn-success"
                            data-toggle="tooltip" data-placement="top" title="Copy the blueprint string to your clipboard">
                        Copy to clipboard
                    </button>
                </div>
            </li>
        </ol>
    </nav>

