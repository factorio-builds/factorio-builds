    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">@blueprint.Title</h1>
            <p>
                <small class="text-muted">
                    by <a asp-page="User" asp-route-user="@blueprint.Owner.UserName">@blueprint.Owner.DisplayName</a>
                    &bull; created @blueprint.CreatedAt.InZone(Model.TimeZone).ToDateTimeOffset().Humanize()
                    @if (blueprint.CreatedAt == blueprint.LatestVersion!.CreatedAt)
                    {
                        <text>&bull; updated @blueprint.LatestVersion!.CreatedAt.InZone(Model.TimeZone).ToDateTimeOffset().Humanize()</text>
                    }
                </small>
            </p>
            <p><small class="text-muted"></small></p>
            <p>@blueprint.Description</p>

            <details>
                <summary>Blueprint String</summary>
                <code>@Model.Metadata?.Encoded</code>
            </details>

            <details>
                <summary>Version History</summary>
                <ul class="list-group list-group-flush">
                    @foreach (var version in Model.Versions!)
                    {
                        <li class="list-group-item">
                            <h5 class="mb-0">
                                <a asp-page="View" asp-route-user="@blueprint.Owner.UserName" asp-route-slug="@blueprint.Slug" asp-route-hash="@version.Hash">
                                    @version.Hash
                                </a>
                                @if (version.Id == blueprint.LatestVersion.Id)
                                {
                                    <text>(current version)</text>
                                }
                            </h5>
                            <small class="text-muted">Updated @version.CreatedAt.InZone(Model.TimeZone).ToDateTimeOffset().Humanize()</small>
                            <p>This is my new and aweome version!</p>
                        </li>
                    }
                </ul>
            </details>
        </div>
        <div class="col-md-4">
            <img src="https://placekitten.com/500/500" class="img-thumbnail" loading="lazy" />
        </div>
    </div>
</div>


@(
    await Html.RenderComponentAsync<BlueprintEnvelope>(RenderMode.Static, new {
        Envelope = blueprint.LatestVersion?.Payload?.Envelope,
        MetadataCache = Model.MetadataCache,
    })
)

