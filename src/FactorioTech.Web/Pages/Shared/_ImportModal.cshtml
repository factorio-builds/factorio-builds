@model ImportInputModel

@inject SignInManager<User> SignInManager

@{ var type = Model.ParentSlug != null ? "version" : "new"; }

<div class="modal fade" id="import-modal-@type" tabindex="-1"
     aria-labelledby="import-modal-label-@type" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page="/Import">
                <div class="modal-header">
                    <h5 class="modal-title" id="import-modal-label-@type">Import blueprint string</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <textarea asp-for="BlueprintString" class="form-control text-monospace" rows="8" autofocus></textarea>
                        <span asp-validation-for="BlueprintString"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Continue</button>
                </div>
                <input asp-for="ParentSlug" type="hidden" />
            </form>
        </div>
    </div>
</div>
