@page
@model IndexModel
@{
    ViewData["Title"] = "Manage your account";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <div class="input-wrapper" data-toggle="tooltip" data-placement="right"
                     title="Changing your email address will be enabled in a future update. Your email address is not used at this point.">
                    <input asp-for="Input.Email" class="input-control" aria-describedby="email-help" readonly />
                </div>
                <small id="email-help" class="form-text text-muted">Your email is visible to you only and we'll never share it with anyone else.</small>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <div class="input-wrapper" data-toggle="tooltip" data-placement="right"
                     title="Changing your username will be enabled in a future update.">
                    <input asp-for="Input.UserName" class="input-control" aria-describedby="username-help" readonly />
                </div>
                <small id="username-help" class="form-text text-muted">
                    Your username is placed in the URL of your blueprints. Only latin alphanumeric characters are supported.
                    <strong>Danger:</strong> Changing your username will change the URL of all your builds!
                </small>
            </div>
            <div class="form-group">
                <label asp-for="Input.DisplayName"></label>
                <div class="input-wrapper">
                    <input asp-for="Input.DisplayName" class="input-control" aria-describedby="displayname-help" />
                </div>
                <small id="displayname-help" class="form-text text-muted">Your display name is visible across the site in place of your username.</small>
                <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScripts" />
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}
